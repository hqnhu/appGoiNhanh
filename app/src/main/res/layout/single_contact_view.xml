<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp8"
        android:background="#3dffffff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp6"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp6">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivContactImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="@dimen/dp8"
                android:src="@drawable/icon_danhba" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvContactName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp6"
                    android:paddingLeft="@dimen/dp6"
                    android:paddingTop="@dimen/dp6"
                    android:text="@string/name"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvContactName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvContactName2"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp6"
                    android:paddingLeft="@dimen/dp4"
                    android:paddingRight="@dimen/dp6"
                    android:paddingTop="@dimen/dp6"
                    android:text="Hoàng Thiên"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvPhoneNumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp6"
                    android:paddingLeft="@dimen/dp6"
                    android:paddingTop="@dimen/dp6"
                    android:text="@string/phone"
                    android:textColor="#FFE2E2E2"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvPhoneNumber2"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp6"
                    android:paddingLeft="@dimen/dp4"
                    android:paddingRight="@dimen/dp6"
                    android:paddingTop="@dimen/dp6"
                    android:text="(0909) 849-824"
                    android:textColor="#FFE2E2E2"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/re_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="id " />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>